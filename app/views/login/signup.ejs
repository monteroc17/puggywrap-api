<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/stylesheets/functions.css">
    <link rel="stylesheet" href="/stylesheets/add-function.css">
    <link rel="stylesheet" href="/stylesheets/login-signup.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="functions-title-container">
        <span class="functions-title">Sign Up</span>
    </div>
    <div class="signup-form-container">
        <form id="form-container" action="/signup" method="post">
            <div class="blank-spacer">
            </div>
            <div class="add-form">
                <label class="add-form-element" for="name">Name</label>
                <input class="add-form-element" type="text" name="name" id="name" placeholder="Type your name...">
            </div>
            <div class="blank-spacer-2">
            </div>
            <div class="add-form">
                <label class="add-form-element" for="email">Email Address</label>
                <input class="add-form-element" type="text" name="email" id="email" placeholder="Type email address...">
            </div>
            <div class="blank-spacer-2">
            </div>
            <div class="add-form">
                <label class="add-form-element" for="password">Password</label>
                <input class="add-form-element" type="password" name="password" id="password" placeholder="Type password...">
            </div>
            <div class="blank-spacer-2">
            </div>
            <div class="add-form" id="add-function-button-container">
                <button class="btn" id="signup-button" type="submit">Next</button>
            </div>
            <div class="blank-spacer">
            </div>
        </form>
    </div>
    
<%- include('../includes/end.ejs') %>