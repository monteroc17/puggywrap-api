<%- include('../includes/head.ejs') %>
        <link rel="stylesheet" href="/stylesheets/functions.css">
        <link rel="stylesheet" href="/stylesheets/add-function.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <div class="functions-title-container">
                <span class="functions-title">Add Function</span>
            </div>
            <% if (errorMessage) { %>
                <div class="user-message user-message--error">
                    <%= errorMessage %>
                </div>
                <% } %>
                    <div class="add-form-container">
                        <form id="form-container" action="/admin/add_function" method="post">
                            <div class="blank-spacer">
                            </div>
                            <div class="add-form">
                                <label class="add-form-element" for="name">Name</label>
                                <input class="add-form-element" type="text" name="name" id="name" placeholder="Type a name...">
                            </div>
                            <div class="blank-spacer-2">
                            </div>
                            <div class="add-form-2">
                                <label class="add-form-element" for="description">Description</label>
                                <textarea class="add-form-element" name="description" id="description" placeholder="Type a description..."></textarea>
                            </div>
                            <div class="blank-spacer-2">
                            </div>
                            <div class="add-form-2">
                                <label class="add-form-element" for="description">Code</label>
                                <textarea class="add-form-element" name="function_code" id="function_code" placeholder="Type your code..."></textarea>
                            </div>
                            <div class="blank-spacer-2">
                            </div>
                            <div class="add-form">
                                <label class="add-form-element" for="name">Tags</label>
                                <input class="add-form-element" type="text" name="tags" id="tags" placeholder="Type a tag...">
                                <label class="add-form-element" for="name" id="add-tag-note">(Each one separated by a comma)</label>
                            </div>
                            <div class="blank-spacer-2">
                            </div>
                            <div class="add-form-2">
                                <label class="add-form-element" for="dependencies">Dependencies</label>
                                <select class="add-form-element" name="dependencies" id="dependencies" multiple>
                                    <% for (let dependency of dependencies) { %>
                                    <option class="select-value" value="<%= dependency.id %>"><%= dependency.name %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="blank-spacer-2">
                            </div>
                            <div class="add-form" id="add-function-button-container">
                                <button class="btn" id="add-form-button" type="submit">Add</button>
                            </div>
                            <div class="blank-spacer">
                            </div>
                        </form>
                    </div>


                    <%- include('../includes/end.ejs') %>